{{#if showUpdateForm}}
  <h4>Update Recipe: {{recipe.name}}</h4>

  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" placeholder=recipe.name}}
      </div>

      <div class="form-group">
        <label for="cuisine">Cuisine</label>
        {{input value=cuisine id="cuisine" placeholder=recipe.cuisine}}
      </div>

      <div class="form-group">
        <label for="dish">Dish</label>
        {{input value=dish id="dish" placeholder=recipe.dish}}
      </div>

      <div class="form-group">
        <label for="time">Time</label>
        {{input value=time id="time" placeholder=recipe.time}}
      </div>

      <div class="form-group">
        <label for="serves">Serves</label>
        {{input value=serves id="serves" placeholder=recipe.serves}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" placeholder=recipe.image}}
      </div>

      <div class="form-group">
        <label for="ingredients">Ingredients</label>
        {{input value=ingredients id="ingredients" placeholder=recipe.ingredients}}
      </div>

      <div class="form-group">
        <label for="instructions">Instructions</label>
        {{input value=instructions id="instructions" placeholder=recipe.instructions}}
      </div>

      <button {{action 'update' recipe}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showUpdateForm'}}>Update Recipe</button>
{{/if}}

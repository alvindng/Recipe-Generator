{{#if showUpdateForm}}
<div class="recipe-update-form">
  <h4><span class="recipe-item-type">Update Recipe:</span> {{recipe.name}}</h4>

  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=recipe.name id="name" placeholder=recipe.name}}
      </div>

      <div class="form-group">
        <label for="cuisine">Cuisine</label>
        {{input value=recipe.cuisine id="cuisine" placeholder=recipe.cuisine}}
      </div>

      <div class="form-group">
        <label for="dish">Dish</label>
        {{input value=recipe.dish id="dish" placeholder=recipe.dish}}
      </div>

      <div class="form-group">
        <label for="time">Time</label>
        {{input value=recipe.time id="time" placeholder=recipe.time}}
      </div>

      <div class="form-group">
        <label for="serves">Serves</label>
        {{input value=recipe.serves id="serves" placeholder=recipe.serves}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=recipe.image id="image" placeholder=recipe.image}}
      </div>

      <div class="form-group">
        <label for="ingredients">Ingredients</label>
        {{input value=recipe.ingredients id="ingredients" placeholder=recipe.ingredients}}
      </div>

      <div class="form-group">
        <label for="instructions">Instructions</label>
        {{input value=recipe.instructions id="instructions" placeholder=recipe.instructions}}
      </div>

    </form>
  </div>
</div>
<button {{action 'update' recipe}} class="btn-save">Save</button>
{{else}}
  <button {{action 'showUpdateForm'}} class="btn-update">Update Recipe</button>
{{/if}}
